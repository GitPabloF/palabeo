generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())
  email String @unique 
  name String?
  userWords     UserWord[]  // Relation many-to-many via UserWord
  userLanguage LangCode @default(en)
  learnedLanguage LangCode @default(es)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Word {
  id           Int      @id @default(autoincrement())
  wordFrom     String
  wordTo       String
  exampleFrom  String
  exampleTo    String
  langFrom     LangCode 
  langTo       LangCode
  typeCode     String
  typeName     String
  createdAt    DateTime @default(now())
  userWords    UserWord[]
  tag          String? 
  @@index([langFrom, langTo])
  @@index([typeCode])
}

// Table de liaison pour la relation many-to-many
model UserWord {
  id           Int      @id @default(autoincrement())
  userId       String
  wordId       Int
  lastReviewed DateTime?
  reviewCount  Int      @default(0)
  mastered     Boolean  @default(false)
  createdAt    DateTime @default(now())

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  word         Word     @relation(fields: [wordId], references: [id], onDelete: Cascade)

  @@unique([userId, wordId])
  @@index([userId])
  @@index([wordId])
}

enum LangCode {
  fr
  es
  en
}